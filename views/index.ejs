<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Practice 1</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>

    <div class="main w-full min-h-screen bg-zinc-900">
        <form action="/create" method="post" class="p-10">
            <div>
                <input 
                type="text"
                placeholder="Title goes here..."
                class="bg-zinc-800 w-full outline-none px-5 py-2 rounded-md"
                name="title"
                required
                >
            </div>
            <div class="my-2">
                <textarea 
                placeholder="Write your task details here"
                class="bg-zinc-800 w-full outline-none px-5 py-2 rounded-md resize-none"
                name="details"
                required
                ></textarea>
            </div>
            <div>
                <input 
                type="submit"
                value="Submit"
                class="bg-blue-800 px-5 py-2 rounded-md cursor-pointer"
                >
            </div>
        </form>
        
        <div class="tasks p-10 flex gap-4 flex-wrap">
            <% if(files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task bg-zinc-800 min-w-72 px-3 py-4 rounded-md relative">
                        <!-- <div class="cursor-pointer absolute top-0 right-0">
                            <span class="bg-red-500 px-2 py-1 text-white">&times;</span>
                        </div> -->
                        <h1 class="text-3xl tracking-tighter"><%= val %></h1>
                        <div class="flex items-center justify-between mt-3">
                            <a href="/file/<%= val %>" class="text-blue-500 inline-block">Read More..</a>
                            <a href="/edit/<%= val %>" class="text-zinc-400 inline-block">Edit filename</a>
                        </div>
                    </div>
               <% }) %>
            <% } else { %> 
                <h3 class="text-zinc-600">no task yet</h3>
            <% } %>      
        </div>
    </div>
    
    <script src="/javascripts/script.js"></script>
</body>
</html>